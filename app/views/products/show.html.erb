<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-12">
    <p>
      <%= @product.name %>
    </p>
  </div> <!--end col-->
</div> <!--end row-->

<div class="row">
  <div class="col-xs-12">
    <p>
      <%= image_tag(@product.image_url, class: "img-thumbnail img-fluid") %>
    </p>
  </div> 
</div>

<div class="row">
  <div class="col-xs-12">
    <p>
      <%= @product.description %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <p>
      <strong>Color:</strong>
      <%= @product.colour %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <p><strong>Average Rating: </strong> <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <p>
      <%= number_to_currency(@product.price) %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= @product.highest_rating_comment.body %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %> 
  </div>
</div>

<br>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Back', products_path, class: 'btn btn-info' %>
  </div>
</div> <!-- end row -->

<%= render 'new_comment' %>

<%= render 'comments' %>

<div class="digg_pagination">
<%= will_paginate @comments, :page_links => false  %>
</div>



