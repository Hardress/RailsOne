<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-12">
    <% cache @product do %>
    <p>
      <%= @product.name %>
    </p>
    <% end %>
  </div> <!--end col-->
</div> <!--end row-->

<div class="row">
  <div class="col-xs-12">
    <p>
      <%= image_tag(@product.image_url, class: "img-fluid img-zoom img-responsive", data_zoom_image: @product.image_url)%>
    </p>
  </div> 
</div>

<div class="row">
  <div class="col-xs-12">
    <p>
      <%= @product.description %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <p>
      <strong>Color:</strong>
      <%= @product.colour %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <p><strong>Average Rating: </strong> <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div> </p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <p>
      <%= number_to_currency(@product.price) %>
    </p>
    <p>
      <%= form_with(url: '/payments/create') do |form| %>
      <%= render partial: "shared/stripe_checkout_button" %>
      <%= hidden_field_tag(:product_id, @product_id) %>
    </p>
<% end %>
  </div>
</div>



<div class="row">
  <div class="col-xs-12">
    <%= @product.highest_rating_comment&.body %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %> 
  </div>
</div>

<br>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Back', products_path, class: 'btn btn-info' %>
  </div>
</div> <!-- end row -->

<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
<%= render 'new_comment' %>
<%= render 'comments' %>

<div class="digg_pagination">
<%= will_paginate @comments, :page_links => false  %>
</div>



