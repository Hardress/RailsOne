<div class="container">
  <div class="row">
    <div class="col-3">
      <% if product.image_url %>
        <%= image_tag(product.image_url, class: "img-thumbnail img-fluid") %>
      <% end %>
      <a href="#"><h1><%= product.name %></h1></a>
      <p><%= product.description %></p>
      <p><%= product.colour %></p>
      <strong><%= product.price %></strong>
    </div><!-- /col -->
  </div><!-- /row -->
</div><!-- /container -->